@using Microsoft.AspNetCore.Http;

@if (Context.Session.GetString("LoginID") != null && Context.Session.GetString("UserName") != null &&  Context.Session.GetString("LoginID").ToString().Equals("1"))
{
	<form asp-area="" asp-controller="Registrations" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
		<ul class="nav navbar-nav navbar-right">
			<li>
				<a asp-area="" asp-controller="Registrations" asp-action="LogOut" title="Manage">Hello @Context.Session.GetString("UserName").ToString()!</a>
			</li>
			<li>
				<button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
			</li>
		</ul>
	</form>
}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li><a asp-area="" asp-controller="Registrations" asp-action="Register">Registrations</a></li>
		<li><a asp-area="" asp-controller="Registrations" asp-action="Login">Log in</a></li>
	</ul>
}
